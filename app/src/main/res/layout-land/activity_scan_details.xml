<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.com.workspace.activity.ScanDetailsActivity">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageButton
        android:id="@+id/back"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keyboard_arrow"
        android:background="@drawable/custom_back_button"
        android:scaleType="centerInside"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/layout1" />


    <ImageView
        android:id="@+id/textLogo"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/header_logo"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp"
        android:layout_below="@+id/header"
        android:layout_alignBottom="@+id/imageView" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo"
        android:padding="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/header"
        android:layout_below="@+id/header"
        android:id="@+id/imageView" />


    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/scanResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:gravity="center"
        android:text="Scan Result"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="#666666"
        android:fontFamily="sans-serif-light"
        android:layout_alignBottom="@+id/back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/memberName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Membername"
        android:textColor="#000000"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:padding="5dp"
        android:layout_below="@+id/scanResult"/>

    <TextView
        android:id="@+id/memberCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Membercode"
        android:textColor="#000000"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:padding="5dp"
        android:layout_below="@+id/memberName"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/memberCode"
        android:layout_margin="10dp"
        >


     <TextView
         android:layout_width="0dp"
         android:layout_height="40dp"
         android:text="Please enter amount"
         android:layout_weight="1"
         android:textSize="14sp"
         android:textColor="#000000"
         android:gravity="center"
         android:fontFamily="sans-serif-light"
         android:padding="5dp"/>
     <EditText
         android:id="@+id/editAmmount"
         android:layout_width="0dp"
         android:layout_height="50dp"
         android:imeOptions="actionDone"
         android:textSize="14sp"
         android:textColor="#000000"
         android:padding="2dp"
         android:drawableLeft="@drawable/edittext_image"
         android:gravity="center"
         android:background="@drawable/edit_textfield"
         android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="30dp"
        android:layout_margin="10dp"
        >


        <Button
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Confirm"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/custom_button"
            android:padding="5dp"/>
        <Button
            android:id="@+id/cancel"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textSize="14sp"
            android:padding="5dp"
            android:text="Cancel"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/custom_cancel_button"
            android:layout_weight="1"/>

    </LinearLayout>


    <Button
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout2"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"
        android:background="#FF5722"
        android:text="Delete last transaction"/>

</RelativeLayout>
</ScrollView>